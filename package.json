{
  "name": "presenze-laba-hr",
  "version": "2.0.0",
  "description": "Sistema HR completo per la gestione delle presenze e richieste - Ricreato da zero",
  "main": "server/index.js",
  "scripts": {
    "start": "node server/index.js",
    "dev": "concurrently \"npm run server:dev\" \"npm run client:dev\"",
    "server:dev": "nodemon server/index.js",
    "client:dev": "cd client && npm run dev",
    "build": "npm cache clean --force && npm install --no-cache && npm run client:install && npm run client:build",
    "build:all": "npm install && npm run client:install && npm run client:build",
    "build:production": "NODE_ENV=production npm install && npm run client:install && npm run client:build",
    "client:build": "cd client && npm run build",
    "client:install": "cd client && npm install",
    "setup": "npm install && npm run client:install",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "keywords": [
    "hr",
    "presenze",
    "laba",
    "sistema",
    "gestione"
  ],
  "author": "TestSprite",
  "license": "MIT",
  "dependencies": {
    "@supabase/supabase-js": "^2.44.2",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "express-rate-limit": "^8.1.0",
    "express-session": "^1.18.0",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "moment": "^2.30.1",
    "morgan": "^1.10.0",
    "node-cron": "^4.2.1",
    "nodemailer": "^7.0.6",
    "path": "^0.12.7",
    "socket.io": "^4.8.1",
    "uuid": "^10.0.0"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "jest": "^30.2.0",
    "nodemon": "^3.1.4",
    "supertest": "^7.1.4"
  }
}
